<b>Company:</b> <%= @job.company.name %> <br>
<b>Position:</b> <%= @job.job_description %> <br>
<b>Level:</b> <%= @job.ranking %> <br>
<b>Pay:</b> <%= @job.level_direct_to %> <br>


<hr>
<h2>Comments</h2>

<ul>
  <% unless @job.job_comment.length > 0 %>
    <h3> No comments available </h3>
  <% end %>
  <% @job.job_comment.each do |comment| %>
    <li><%= comment.comment %> <%= comment.created_at %></li>
  <% end %>
</ul>
<%= form_for :comment, url: "/companies/#{@job.company_id}/jobs/#{@job.id}" do |f| %>
  <%= f.text_field :comment %> <br>
  <%= f.submit "Submit comment" %>
<% end %>
