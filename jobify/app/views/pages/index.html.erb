<html>
<head>
  <title>Jobify</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
  <%= csrf_meta_tags %>
  <link id="favicon" rel="shortcut icon" href=".../app/assets/images/icon.png" type="image/png">
  <%= stylesheet_link_tag "application", media: "all" %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

  <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
</head>

<body>
  <div class="full-screen-section">
    <div class = "container text-center">
      <div class="row">
        <div class="col-md-3">
          <% if @best_ranked_company %>
            <% @best_ranked_company.each do |company| %>
              <div class="panel panel-warning">
                <div class="panel-heading">Highscores!</div>
                  <div class="panel-body">

                    <h5>Highest ranked company!</h5>
                    <img draggable = "false" height="50px" width="50px" src="/icon/<%= company.name %>_icon.png">
                    <Br>
                    <b><%= company.name %></b>
                    <hr/>
                    <% if @worst_ranked_company %>
                      <% @worst_ranked_company.each do |company| %>
                        <h5>Lowest ranked company!</h5>
                        <img draggable = "false" height="50px" width="50px" src="/icon/<%= company.name %>_icon.png">
                        <br>
                        <b><%= company.name %></b>
                      <% end %>
                    <% end %>
                  </div>
                </div>
            <% end %>
          <% end %>
        </div>

          <div class="col-md-6">

            <div class="panel panel-primary">
              <div class="panel-heading"><b>Google</b> added a job! <br> <font size = "2px">Junior Software Engineer</font></div>
                <div class="panel-body">
                  <img draggable = "false" height="50px" width="50px" src="/icon/Google_icon.png">
                  <br>
                  <br>
                  <a href = "#">
                    <button class = "btn btn-black btn-md">view</button>
                  </a>

                  <br><br>
                  <font size = "1px">about a second ago.</font>
                </div>
              </div>


            <% if @list_all_companies %>
              <% @list_all_companies.each do |company| %>
                  <div class="panel panel-success">
                    <div class="panel-heading">Welcome <b><%= company.name %></b> to Jobify!</div>
                      <div class="panel-body">
                        <img draggable = "false" height="50px" width="50px" src="/icon/<%= company.name %>_icon.png">

                        <br><br>

                        <a href = "/companies/<%= company.id %>">
                          <button class = "btn btn-black btn-md">view</button>
                        </a>

                        <br><br>
                        <font size = "1px"><%= time_ago_in_words(company.created_at) %> ago.</font>
                      </div>
                    </div>
              <% end %>
            <% end %>
          </div>

          <div class="col-md-3">
            </div>

</body>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

</html>
