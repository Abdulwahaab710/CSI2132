<html>
<head>
  <title>Jobify | Login / Signup</title>
  <meta http-equiv = "X-UA-Compatible" content = "IE=edge">
  <meta name = "viewport" content = "initial-scale = 1, maximum-scale = 1, user-scalable = no">
  <%= csrf_meta_tags %>
  <link id = "favicon" rel = "shortcut icon" href = ".../app/assets/images/icon.png" type = "image/png">
  <%= stylesheet_link_tag "application", media: "all" %>
  <link rel = "stylesheet" href = "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel = 'stylesheet' href = "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet">
</head>

<body>

  <div class = "header-section">
    <div class = "wrapper">
      <div class = "row">
        <div class = "header-container">
          <div class = "greetings">

            <img src = "logo.png" draggable = "false">
            <h1 style = "font-size : 40px; color : white;">It's like <strong>YELP</strong>, but for <strong>JOBS</strong>.</h1>

            <br>

            <div class = "col-md-4 col-md-offset-4">
              <%= form_tag '/login' do %>
                <input type="text" name = "email" id = "email" class="form-control white-input" placeholder="Email">
                <br>
                <input type="password" name = "password" id = "password" class = "form-control white-input" placeholder = "Password">
                <br><br>
                <input class = "btn btn-white" type = "submit" name="commit" value="Log In" data-disable-with="Submit" />
                &nbsp;&nbsp;&nbsp;&nbsp;
                <a href = "#signup"><input class = "btn btn-white" value="Sign Up" /></a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id = "signup" class = "action-section">
    <div class = "wrapper">
      <div class = "row">
        <div class = "header-container">

          <div class = "col-md-4 col-md-offset-4">
            <br>
            <h1>Sign Up</h1>
            <br>

            <%= form_for :user, url: '/users' do |f| %>
              <%# if @user.errors.any? %#>
                <ul>
                  <% @user.errors.full_messages.each do |message| %#>
                    <li><%#= message %#></li>
                  <% end %#>
                </ul>
              <%# end %>

              <input type = "text" name = "user[name]" id = "user_name" class = "form-control black-input" placeholder = "Name" />
              <br>
              <input type = "text" name = "user[email]" id = "user_email" class = "form-control black-input" placeholder = "Email" />
              <br>
              <input type = "password" name = "user[password]" id = "user_password" class = "form-control black-input" placeholder = "Password" />
              <br>
              <input type = "password" name = "user[password_confirmation]" id = "user_password_confirmation" class = "form-control black-input" placeholder = "Confirm Password" />
              <br><br>
              <input class = "btn btn-black" type = "submit" name = "commit" value = "Sign Up" data-disable-with = "Submit" />
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
