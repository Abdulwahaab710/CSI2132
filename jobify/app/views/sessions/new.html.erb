<!-- app/views/sessions/new.html.erb -->

<h1>Login</h1>

<%= form_tag '/login' do %>
  <%#
  <% if @user.errors.any? ##>
    <ul>
      <% @user.errors.full_messages.each do |message| %#>
        <li><%= message %#></li>
      <% end %#>
    </ul>
  <% end %>

  Email: <%= text_field_tag :email %>
  Password: <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>

<% end %>
