<%= stylesheet_link_tag "form", media: "all" %>
<%= javascript_include_tag "form", media: "all" %>
<div id="signup" class="half-screen-section">
  <div class="wrapper">
    <div class="row">
      <div class="header-container">

        <div class="col-md-4 col-md-offset-4">

          <%= form_for :user, url: '/signup#signup' do |f| %>
            <% if @user && @user.errors.any? %>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
            <input type="text" name="person[first_name]" class="form-control black-input" placeholder="First name" required>
            <br>
            <input type="text" name="person[last_name]" class="form-control black-input" placeholder="Last name" required>
            <br>
            <input type="text" name="user[name]" id="user_name" class="form-control black-input" placeholder="Username" required/>
            <br>
            <input type="text" name="user[program]" id="user_program" class="form-control black-input" placeholder="Porgram" required/>
            <br>
            <input type="text" name="user[level]" id="user_level" class="form-control black-input" placeholder="Level" required/>
            <br>
            <input type="email" name="user[email]" id="user_email" class="form-control black-input" placeholder="Email" data-error="Bruh, that email address is invalid" required/>
            <br>
            <input type="password" name="user[password]" id="user_password" class="form-control black-input" placeholder="Password" required/>
            <br>
            <input type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control black-input" placeholder="Confirm Password" required/>
            <br>
            <div class="switch">
              <input name="user_type" type="radio" value="student" id="student" checked>
              <label for="student">Student</label>

              <input name="user_type" type="radio" value="moderator" id="moderator">
              <label for="moderator" class="right">Moderator</label>

              <span aria-hidden="true"></span>
            </div>
            <br>
            <br>
            <input type="text" name="person[student_num]" class="form-control black-input student-number" placeholder="Student number">
            <br>
            <br>
            <input class="btn btn-black" type="submit" name="commit" value="Sign Up" data-disable-with="Submit" />
            <br>
            <!-- <input class="btn btn&#45;black" type="submit" name="commit" value="Sign Up" data&#45;disable&#45;with="Submit" /> -->
        </div>

          <% end %>

        <div class="col-md-12">
          <br>
          <div style="word-spacing : 30px"><a href="/about">ABOUT</a></font></div>
        </div>

      </div>
    </div>
  </div>
</div>
